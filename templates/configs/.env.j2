# Homelab Environment Configuration
# This file is generated by Ansible from templates/configs/.env.j2
# Do NOT edit manually - update inventory/group_vars/vault.yml instead

# General
DOMAIN={{ domain | default('yourdomain.com') }}
TZ={{ timezone | default('Europe/Warsaw') }}
SERVER_IP={{ ansible_host }}

# Cloudflare (for Traefik SSL and Tunnel)
CLOUDFLARE_EMAIL={{ cloudflare_email }}
CLOUDFLARE_API_KEY={{ cloudflare_api_key }}
CLOUDFLARE_TUNNEL_TOKEN={{ cloudflare_tunnel_token }}

# Traefik
TRAEFIK_AUTH={{ traefik_auth }}

# Pi-hole
PIHOLE_PASSWORD={{ pihole_password }}

# Grafana
GRAFANA_ADMIN_USER={{ grafana_admin_user | default('admin') }}
GRAFANA_ADMIN_PASSWORD={{ grafana_admin_password }}

# InfluxDB
INFLUXDB_ADMIN_USER={{ influxdb_admin_user | default('admin') }}
INFLUXDB_ADMIN_PASSWORD={{ influxdb_admin_password }}
INFLUXDB_USER_PASSWORD={{ influxdb_user_password }}

# Prometheus
PROMETHEUS_AUTH={{ traefik_auth }}

# Zigbee
ZIGBEE_DEVICE={{ zigbee_device | default('/dev/ttyUSB0') }}
ZIGBEE_AUTH={{ zigbee_auth }}

# Home Assistant
HASS_TOKEN={{ hass_token | default('') }}
