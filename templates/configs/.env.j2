# Homelab Environment Configuration
# Copy to .env and fill in your values
# Never commit .env to git!

# General
DOMAIN=yourdomain.com
TZ=Europe/Warsaw
SERVER_IP=192.168.1.100

# Cloudflare (for Traefik SSL and Tunnel)
CLOUDFLARE_EMAIL=your-email@example.com
CLOUDFLARE_API_KEY=your-api-key
CLOUDFLARE_TUNNEL_TOKEN=your-tunnel-token

# Traefik
TRAEFIK_AUTH=admin:$$apr1$$H6uskkkW$$IgXLP6ewTrSuBkTrqE8wj/

# Pi-hole
PIHOLE_PASSWORD=changeme

# Grafana
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=changeme

# InfluxDB
INFLUXDB_ADMIN_USER=admin
INFLUXDB_ADMIN_PASSWORD=changeme
INFLUXDB_USER_PASSWORD=changeme

# Prometheus
PROMETHEUS_AUTH=admin:$$apr1$$H6uskkkW$$IgXLP6ewTrSuBkTrqE8wj/

# Zigbee
ZIGBEE_DEVICE=/dev/ttyUSB0
ZIGBEE_AUTH=admin:$$apr1$$H6uskkkW$$IgXLP6ewTrSuBkTrqE8wj/

# Home Assistant
HASS_TOKEN=your-long-lived-access-token
